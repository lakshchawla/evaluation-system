<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leaderboard</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/popup.css">

    <link rel="stylesheet"
        href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <link rel="stylesheet"
        href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        .body {
            margin-top: 20px;
            margin-left: 20vw;
            margin-right: 20vw;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        }

        .card-link {
            padding: 10px;
            border: 1px dashed black;
            border-radius: 10px;
            margin-top: 25px;
            margin-bottom: 25px;
        }

        .certificateName {
            font-size: 14px;
            text-decoration: underline;
        }

        .certificateName:hover {
            color: rgb(0, 128, 255);
        }
    </style>
</head>

<body>
    <!-- Body -->
    <div class="body">

        <p style="font-size:60px"><img src="/images/logo.png" style="padding: auto; width:200px;">
            <i class="fa fa-trophy" style="font-size:60px;color:red"></i>
            LEADERBOARD
            <i class="fa fa-trophy" style="font-size:60px;color:red"></i>
        </p>
        <hr class="col-12 col-md-12 mb-5">


        <div class="row">

            <!-- Top certification -->
            <H2>Top Rankers in Certifications with Grade A+:</H2>
            <% students.forEach(student=> { %>
                <% if(student.gradeSchema.certificatesGrade=="a+" ){ %>
                    <div class="card mt-4 ms-4 mb-5 bg-li col-sm-3 p-10">
                        <a class="cardLink" href="/mentor-dashboard/view-students/<%= student._id %>">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item ms-auto me-auto">
                                    <img src="./../images/253852115_369284928277098_6803301368560095943_n.jpg"
                                        style="height: 150px; width: 150px;" class="card-img-top ms-auto me-auto"
                                        alt="...">
                                </li>
                                <li class="list-group-item">
                                    <h5 class="card-title mt-2 h3">
                                        <%= student.profile.name %>
                                    </h5>
                                    <p class="card-text">
                                        <%= student.uid.toUpperCase()%>
                                            <br>
                                            <%= student.profile.class.toUpperCase()%>
                                                <%= student.profile.section.toUpperCase()%>
                                                    <br>
                                    </p>
                                </li>
                            </ul>
                        </a>
                    </div>
                    <% } %>
                        <% }) %>

                            <!-- Top Skills -->
                            <H2>Top Rankers in Skills with Grade A+:</H2>
                            <% students.forEach(student=> { %>
                                <% if(student.gradeSchema.skillsGrade=="a+" ){ %>
                                    <div class="card mt-4 ms-4 mb-5 bg-li col-sm-3 p-10">
                                        <a class="cardLink" href="/mentor-dashboard/view-students/<%= student._id %>">
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item ms-auto me-auto">
                                                    <img src="./../images/253852115_369284928277098_6803301368560095943_n.jpg"
                                                        style="height: 150px; width: 150px;"
                                                        class="card-img-top ms-auto me-auto" alt="...">
                                                </li>
                                                <li class="list-group-item">
                                                    <h5 class="card-title mt-2 h3">
                                                        <%= student.profile.name %>
                                                    </h5>
                                                    <p class="card-text">
                                                        <%= student.uid.toUpperCase()%>
                                                            <br>
                                                            <%= student.profile.class.toUpperCase()%>
                                                                <%= student.profile.section.toUpperCase()%>
                                                                    <br>
                                                    </p>
                                                </li>
                                            </ul>
                                        </a>
                                    </div>
                                    <% } %>
                                        <% }) %>

                                            <!-- Top Achievements -->
                                            <H2>Top Rankers in Achievements with Grade A+:</H2>
                                            <% students.forEach(student=> { %>
                                                <% if(student.gradeSchema.achievementsGrade=="a+" ){ %>
                                                    <div class="card mt-4 ms-4 mb-5 bg-li col-sm-3 p-10">
                                                        <a class="cardLink"
                                                            href="/mentor-dashboard/view-students/<%= student._id %>">
                                                            <ul class="list-group list-group-flush">
                                                                <li class="list-group-item ms-auto me-auto">
                                                                    <img src="./../images/253852115_369284928277098_6803301368560095943_n.jpg"
                                                                        style="height: 150px; width: 150px;"
                                                                        class="card-img-top ms-auto me-auto" alt="...">
                                                                </li>
                                                                <li class="list-group-item">
                                                                    <h5 class="card-title mt-2 h3">
                                                                        <%= student.profile.name %>
                                                                    </h5>
                                                                    <p class="card-text">
                                                                        <%= student.uid.toUpperCase()%>
                                                                            <br>
                                                                            <%= student.profile.class.toUpperCase()%>
                                                                                <%=
                                                                                    student.profile.section.toUpperCase()%>
                                                                                    <br>
                                                                    </p>
                                                                </li>
                                                            </ul>
                                                        </a>
                                                    </div>
                                                    <% } %>
                                                        <% }) %>



        </div>

        <center><a href="/" class="btn btn-primary btn-lg px-3 mt-4 mb-4">
                Go Back to Profile</a></center>



        <script src="/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
        <script src="/js/script.js"></script>


        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>




        <script>
            function viewGrades() {
                // get the clock
                var viewingElement = document.getElementById('grades');

                // get the current value of the clock's display property
                var displaySetting = viewingElement.style.display;

                // also get the clock button, so we can change what it says
                var viewButton = document.getElementById('viewButton');

                // now toggle the clock and the button text, depending on current state
                if (displaySetting == 'block') {
                    // clock is visible. hide it
                    viewingElement.style.display = 'none';
                    // change button text
                    viewButton.innerHTML = 'View Grades';
                }
                else {
                    // clock is hidden. show it
                    viewingElement.style.display = 'block';
                    // change button text
                    viewButton.innerHTML = 'Hide Grades';
                }
            }

        </script>

</body>

</html>
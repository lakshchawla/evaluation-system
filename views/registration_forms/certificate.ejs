<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./css/bootstrap.min.css">
    <link rel="stylesheet" href="./css/style.css">
</head>

<body>
    <!-- Side Bar -->
    <%- include("./../components/sidebar") %>

        <!-- Body -->
        <div class="bodyContainer">

            <!-- Navbar -->
            <%- include("./../components/header") %>

        <div class="container col-lg-12" style="max-width: 730px;">

            <div class="pageHeading">
                <h1>Certificate Registration</h1>
            </div>

            <form action="/certificate-registration" method="POST">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Course name</label>
                    <input type="text" class="form-control" name="credentialName" id="exampleInputEmail1"
                        aria-describedby="emailHelp">
                </div>

                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Course provider</label>
                    <input type="text" class="form-control" name="credentialSource" id="exampleInputEmail1"
                        aria-describedby="emailHelp">
                </div>

                <div class="ms-auto me-auto" style="width: fit-content;">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </form>
        </div>

        

    </div>

    <script src="/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
</body>

</html>